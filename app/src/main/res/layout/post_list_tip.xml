<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/tip_background"
    style="@style/MyCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tip_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cdesc_post_image"
            tools:src="@drawable/quill_to_ghost_small"
            />

        <TextView
            android:id="@+id/tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingBottom="@dimen/padding_large"
            android:textAppearance="@style/TextAppearance"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="1dp"
            tools:text="@string/quill_is_now_ghost_android"
            />

        <View style="@style/MyDivider" />

        <LinearLayout
            android:id="@+id/tip_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/tip_action"
                style="?attr/borderlessButtonStyle"
                tools:drawableLeft="@drawable/play_store"
                tools:drawableStart="@drawable/play_store"
                tools:drawablePadding="@dimen/padding_default"
                tools:text="@string/ghost_android_download" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/tip_action"
                style="?attr/borderlessButtonStyle"
                tools:drawableLeft="@drawable/help_circle"
                tools:drawableStart="@drawable/help_circle"
                tools:drawablePadding="@dimen/padding_default"
                tools:text="@string/ghost_android_announcement"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
